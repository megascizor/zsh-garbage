#compdef trash


function _trash() {
  local context curcontext=$curcontext state line
  typeset -A opt_args
  local ret=1

  _arguments -C \
    '(- :)'{-h,--help}'[show this help and exit]' \
    '(-)'{-r,--restore}'[restore files from trash box]: :_files' \
    '(-)'{-s,--system}'[use system-trashcan instead trash-trashcan]' \
    '(-)*: :_files' \
    && ret=0

  return ret
}

_trash "$@"
