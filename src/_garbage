#compdef garbage


function _garbage() {
  local context curcontext=$curcontext state line
  typeset -A opt_args
  local ret=1

  _arguments -C \
    '(- :)'{-h,--help}'[show this help and exit]' \
    '(- :)'{-c,--clean}'[clean the garabage box]' \
    '(-)'{-r,--restore}'[restore files from the garabage box]: :_files' \
    '(-)'{-s,--system}'[use system trash can instead "garbage" trash can]' \
    '(-)*: :_files' \
    && ret=0

  return ret
}

_garbage "$@"
